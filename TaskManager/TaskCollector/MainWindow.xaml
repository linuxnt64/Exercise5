<Window x:Class="TaskCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskCollector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Bisque">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
            <TextBlock Text="Namn:" />
            <TextBox x:Name="tbName" Padding="5" TabIndex="0" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
            <TextBlock Text="Telefon:" />
            <TextBox x:Name="tbPhone" Padding="5" TabIndex="1" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="5">
            <TextBlock Text="Mail:" />
            <TextBox x:Name="tbMail" Padding="5" TabIndex="2" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="2" Margin="5">
            <TextBlock Text="Företag:" />
            <TextBox x:Name="tbCompany" Padding="5" TabIndex="3" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2"  Grid.ColumnSpan="2" Margin="5">
            <TextBlock Text="Adress:" />
            <TextBox x:Name="tbAddress" Padding="5" TabIndex="4" />
        </StackPanel>
        <Button x:Name="btnAddCustomer" Grid.Row="2" Grid.Column="0" Content="Lägg till kund" Margin="5" Padding="5" Click="btnAddCustomer_Click" Cursor="Cross"/>
            <TextBlock Text="Kundlista:" Grid.Row="3" Grid.ColumnSpan="4" Margin="5" />
        <ListView x:Name="lvCustomerList" HorizontalContentAlignment="Stretch" DataContext="TaskCollector.Models.Customer" Padding="5" TabIndex="4" Grid.Row="4" Grid.ColumnSpan="4" Margin="5" SelectionChanged="lvCustomerList_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Id}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}"/>
                        <TextBlock Grid.Column="2" Text="{Binding Phone}"/>
                        <TextBlock Grid.Column="3" Text="{Binding Mail}"/>
                        <TextBlock Grid.Column="4" Text="{Binding Company}"/>
                        <TextBlock Grid.Column="5" Text="{Binding Address}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
